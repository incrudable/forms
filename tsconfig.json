{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@incrudable/*": ["libs/*"],
      "@incrudable/forms": ["dist/libs/forms"],
      "@incrudable/material-deps": ["dist/libs/material-deps"],
      "@incrudable/renderers/material-renderer": [
        "libs/renderers/material-renderer/src/index.ts"
      ]
    },
    "rootDir": "."
  }
}
